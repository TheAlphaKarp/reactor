{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "removeComments": true,
    "noImplicitAny": true,
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
